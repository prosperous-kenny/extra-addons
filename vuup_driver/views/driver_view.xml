<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="vuup_driver_tree_view" model="ir.ui.view">
		<field name="name">Vuup Driver Tree View</field>
		<field name="model">res.users</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name"/>
				<field name="login"/>
				<field name="is_driver"/>
				<field name="is_online"/>
				<field name="is_ontrip"/>
				<field name="login_date"/>
             </tree>
		</field>
	</record>



<record id="vuup_driver_form_view" model="ir.ui.view">
		<field name="name">Vuup Driver Form View</field>
		<field name="model">res.users</field>
		<field name="arch" type="xml">
			<form string="DRIVER">
				<header></header>
				<sheet>
					<group name="top">
						<group name="left">
						<field name="name"/>
				       <field name="phone"/>
						</group>
						<group name="right">
						<!-- <field name="image_1920" widget="image" class="oe_avatar"/> -->
						<field name="partner_latitude"/>
				       <field name="partner_longitude"/>
							<field name="is_online"/>
							<field name="is_ontrip"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>

</odoo>